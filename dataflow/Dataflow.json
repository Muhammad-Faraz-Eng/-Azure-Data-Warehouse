{
	"name": "Dataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Parquet_ds",
						"type": "DatasetReference"
					},
					"name": "sourcebronze"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "Parquet1",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "filterlessthan100"
				},
				{
					"name": "addColumn"
				},
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          OrderID as long,",
				"          OrderDate as date,",
				"          CustomerID as long,",
				"          CustomerName as string,",
				"          CustomerEmail as string,",
				"          ProductID as string,",
				"          ProductName as string,",
				"          ProductCategory as string,",
				"          RegionID as string,",
				"          RegionName as string,",
				"          Country as string,",
				"          Quantity as long,",
				"          UnitPrice as long,",
				"          TotalAmount as long",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> sourcebronze",
				"sourcebronze filter(UnitPrice >= 100) ~> filterlessthan100",
				"filterlessthan100 derive(domains = split(CustomerEmail, '@')) ~> addColumn",
				"addColumn derive(domains = slice(domains,2)[1]) ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'parquet',",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}